        <![endif]-->

        <!-- Add your site or application content here -->
        <div class="page-wrap orange-gr">
          <div class="container ma-auto cf">

            <header class="pl-sm header">
              <span class="title-wr">
                <h1 class="title">Orange Village</h1>
                <h2 class="sub-title">A Mobile Home Community</h2>
              </span>
            </header>

            <%= erb :_nav %>
            
            <div class="two-thirds" >

              <div id="main-body" class="pl-sm">
                <h2 class="sub-title cont-title">Homes for sale</h2>
                <ul class="homes">
                  <!-- NB: For SOME REASON some of the images are JPG and some are jpg. PAY ATTN -->
                  <% homes.each_with_index do |h, i| %>
                    <% if i == 0 %>
                      <li class="first">
                    <% else %>
                      <li>
                    <% end %>  
                        <% if h['images'].length > 0 %>
                          <% h['images'].each_with_index do |i, x| %>
                            <% if x == 0 %>  
                              <img src="<%= i['image']['thumb']['url'] %>" class="home-img">
                            <% end %>
                          <% end %>
                        <% else %>
                          <img src="images/house_icon.png" class="home-img">
                        <% end %>  
                      <span class="home-info pl-mc">
                        
                        <% if h["description"].length > 2 %>  
                          <span class="dis-bl"><strong>Description: </strong> <%= h["description"] %></span>
                        <% end %>
                        <span class="dis-bl"><strong>Bedrooms:</strong> <%= h["bedrooms"] %></span>
                        <span class="dis-bl"><strong>Bathrooms:</strong> <%= h["bathrooms"] %></span>
                        <span class="dis-bl"><strong>Size:</strong> <%= h["width"] %> x <%= h['length'] %> square feet</span>
                        <span class="dis-bl"><strong>Price:</strong> $<%= h["price"] %></span>

                      </span>
                    </li>
                  <% end %>
                </ul>              
              </div>
            
            </div>

            <div class="one-third">
              <%= erb :_contact, locals: { phone: @phone } %>
            </div>

          </div>

          <%= erb :_footer, locals: { phone: @phone } %>
          
        </div>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type="text/javascript"></script>
        <script src="js/plugins.js"></script>
        <script src="js/main.js"></script>
